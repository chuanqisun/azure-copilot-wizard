{
  "name": "root",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "npm run dev-assistant",
    "dev-all": "concurrently npm:dev:*",
    "dev-symphony": "concurrently npm:dev:symphony-lab npm:dev:server",
    "dev-impromptu": "concurrently npm:dev:impromptu-plugin npm:dev:impromptu-web npm:dev:server",
    "dev:impromptu-plugin": "npm run dev -w apps/impromptu/plugin",
    "dev:impromptu-web": "npm run dev -w apps/impromptu/web",
    "dev-assistant": "concurrently npm:dev:assistant-plugin npm:dev:assistant-web npm:dev:server",
    "dev:assistant-plugin": "npm run dev -w apps/assistant/plugin",
    "dev:assistant-web": "npm run dev -w apps/assistant/web",
    "dev:server": "npm run dev -w apps/server",
    "dev:symphony-lab": "npm run dev -w apps/symphony-lab",
    "build": "concurrently npm:build:*",
    "build-assistant": "concurrently npm:build:assistant-plugin npm:build:assistant-web",
    "build:assistant-plugin": "npm run build -w apps/assistant/plugin",
    "build:assistant-web": "npm run build -w apps/assistant/web",
    "build-impromptu": "concurrently npm:build:impromptu-plugin npm:build:impromptu-web",
    "build:impromptu-plugin": "npm run build -w apps/impromptu/plugin",
    "build:impromptu-web": "npm run build -w apps/impromptu/web",
    "build:server": "npm run build -w apps/server",
    "build:symphony-lab": "npm run build -w apps/symphony-lab"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hits-open/hits-assistant-for-figma.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hits-open/hits-assistant-for-figma/issues"
  },
  "homepage": "https://github.com/hits-open/hits-assistant-for-figma#readme",
  "workspaces": [
    "apps/*/*",
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@figma/plugin-typings": "^1.72.0",
    "@figma/widget-typings": "^1.5.0",
    "@types/node": "^20.4.9",
    "concurrently": "^8.2.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  }
}
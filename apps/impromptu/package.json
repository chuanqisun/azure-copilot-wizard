{
  "name": "impromptu",
  "version": "1.0.0",
  "description": "Your Figma Plugin",
  "main": "main.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && concurrently npm:build:*",
    "dev": "concurrently npm:dev:*",
    "build:main": "esbuild plugin/main.ts --bundle --target=es6 --outfile=dist/main.js",
    "build:ui": "npx vite build --emptyOutDir=false",
    "dev:main": "npm run build:main -- --watch",
    "dev:ui": "npm run build:ui -- --watch --mode=development --minify=false",
    "test": "tsx ui/main.test.ts"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@figma/plugin-typings": "*",
    "@figma/widget-typings": "^1.9.1",
    "@types/node": "^20.9.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.5",
    "lit-html": "^3.0.2",
    "rxjs": "^7.8.1",
    "tsx": "^4.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vite-plugin-singlefile": "^0.13.5"
  }
}